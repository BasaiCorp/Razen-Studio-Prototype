# Razen-lang Syntax Test File - V3 - Updated for @type syntax

# Structs and Type Annotations
struct userData {
    name: str,
    age: int
}

# Variable and Constant Declarations
var x: int = 10
const app_name: str = "Razen Studio"
var any_type_value = "Prathmesh"
var p: obj = userData { name: "Prathmesh", age: 17 }

# Lists and Maps
var numbers: list<int> = [1,2,3,4]
var scores: map<str,int> = {
    "Alice": 95,
    "Bob": 88
}

# Function with new type syntax
fun average(nums: list<int>): float {
    var total: int = 0
    for n in nums {
        total += n
    }
    return total / nums.length
}

# Library Usage
use math
use "discordRZN"

# Namespace operator
var squared: int = math::sqrt(256)

# F-string and show<color>
show<green> f"The square root of 256 is {squared}."
show<light_red> "This is a test message."

# Control Flow
match squared {
    16 => show "Correct!"
    _ => show "Incorrect."
}

